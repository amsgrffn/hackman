<!-- Bookmark -->
<article class="bookmark {{post_class}}">
    <div class="bookmark-header">
        <div>
            <div class="meta">
                <span class="tag">Bookmark</span>
                <span><time datetime="{{date format="YYYY-MM-DD"}}">{{date published_at format="MMM D, h:mmA"}}</time></span>
            </div>
            <h2><a href="{{url}}">{{title}}</a></h2>
        </div>
    </div>
    <div class="bookmark-comment">
        <div class="post-content">
            {{content}}
        </div>
        <footer>
            <p class="post-topics">{{tags limit="3" separator=", "}}</p>
            {{> "utilities/post-dropdown"}}
        </footer>
    </div>
</article>